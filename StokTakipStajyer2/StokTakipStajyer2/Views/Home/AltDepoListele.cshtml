@model IEnumerable<StokTakipStajyer2.Models.ALT_DEPO>

@{
    ViewBag.Title = "Alt Depo Listele";
}

<h2>Alt Depo Listele</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <form class="form-inline" method="get" action="@Url.Action("AltDepoListele", "Home")">
        <input type="text" class="form-control mr-2" id="searchString" name="searchString" placeholder="Ara" value="@Request.QueryString["searchString"]" />
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
    @Html.ActionLink("Excel'e Aktar", "ExportAltDepoToExcel", "Home", new { area = "" }, new { @class = "btn btn-success" })
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Alt Depo Adı</th>
            <th>Statü</th>
            <th>Oluşturan Kullanıcı</th>
            <th>Oluşturma Tarihi</th>
            <th>Güncelleyen Kullanıcı</th>
            <th>Güncelleme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var altdepo in Model)
        {
            <tr>
                <td>@altdepo.ALT_DEPO_ADI</td>
                <td>@altdepo.STATU</td>
                <td>@altdepo.OLUSTURAN_KULLANICI</td>
                <td>@altdepo.OLUSTURMA_TARIHI</td>
                <td>@altdepo.GUNCELLEYEN_KULLANICI</td>
                <td>@altdepo.GUNCELLEME_TARIHI</td>
                <td>
                    @Html.ActionLink("Düzenle", "AltDepoGuncelle", new { id = altdepo.ALT_DEPO_ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "AltDepoSil", new { id = altdepo.ALT_DEPO_ID }, new { @class = "btn btn-danger", onclick = "return confirm('Bu alt depoyu silmek istediğinize emin misiniz?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
