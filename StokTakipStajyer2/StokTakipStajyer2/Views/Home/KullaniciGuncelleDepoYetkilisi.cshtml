@model StokTakipStajyer2.Models.KULLANICI

@{
    ViewBag.Title = "Kullanıcı Güncelle";

    var statuOptions = new List<SelectListItem>
{
        new SelectListItem { Text = "True", Value = "true" },
        new SelectListItem { Text = "False", Value = "false" }
    };

    var tipOptions = new List<SelectListItem>
{
        new SelectListItem { Text = "Depo Yetkilisi", Value = "2" },
    };
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("KullaniciGuncelleDepoYetkilisi", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.KUL_ID)

    <div class="form-group">
        @Html.Label("Username", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.KUL_USERNAME, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KUL_USERNAME, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Şifre", htmlAttributes: new { @class = "control-label" })
        @Html.PasswordFor(m => m.KUL_SIFRE, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KUL_SIFRE, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Ad", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.KUL_AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KUL_AD, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Soyad", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.KUL_SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KUL_SOYAD, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kullanıcı Statüsü", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(m => m.STATU, statuOptions, "Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.STATU, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kullanıcı Tipi", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(m => m.KUL_TIP, tipOptions, "Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KUL_TIP, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
        @Html.ActionLink("Geri", "KullaniciListeleDepoYetkilisi", null, new { @class = "btn btn-default" })
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
