@model StokTakipStajyer2.Models.DEPO

@{
    ViewBag.Title = "Depo Ekle";
    var statuOptions = new List<SelectListItem>
{
        new SelectListItem { Text = "True", Value = "true" },
        new SelectListItem { Text = "False", Value = "false" }
    };
}

<h2>Depo Ekle</h2>

@using (Html.BeginForm("DepoEkle", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="DEPO_ADI">Depo Adı</label>
        @Html.TextBoxFor(m => m.DEPO_ADI, new { @class = "form-control", @placeholder = "Depo Adı" })
    </div>
    <div class="form-group">
        <label for="STATU">Statü</label>
        @Html.DropDownListFor(m => m.STATU, statuOptions, "Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.STATU, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Depo Ekle</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Message
    </div>
}
