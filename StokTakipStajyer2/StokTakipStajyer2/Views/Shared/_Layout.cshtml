<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Stok Takip", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Giriş", "Giris", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (Session["ID"] != null && (int)Session["KullaniciTipi"] == 1)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kullaniciDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kullanıcı
                            </a>
                            <div class="dropdown-menu" aria-labelledby="kullaniciDropdown">
                                @Html.ActionLink("Kullanıcı Ekle", "KullaniciEkle", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Kullanıcı Listesi", "KullaniciListele", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="depoDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Depo
                            </a>
                            <div class="dropdown-menu" aria-labelledby="depoDropdown">
                                @Html.ActionLink("Depo Ekle", "DepoEkle", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Depo Listesi", "DepoListele", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="altDepoDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Alt Depo
                            </a>
                            <div class="dropdown-menu" aria-labelledby="altDepoDropdown">
                                @Html.ActionLink("Alt Depo Ekle", "AltDepoEkle", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Alt Depo Listesi", "AltDepoListele", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Depo ve Alt Depo Listesi", "DepoAltdepoListele", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="stokDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Stok
                            </a>
                            <div class="dropdown-menu" aria-labelledby="stokDropdown">
                                @Html.ActionLink("Stok Ekle", "StokEkle", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Stok Listesi", "StokListele", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                    }
                    @if (Session["ID"] != null && (int)Session["KullaniciTipi"] == 2)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="stokHareketDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Stok
                            </a>
                            <div class="dropdown-menu" aria-labelledby="stokHareketDropdown">
                                @Html.ActionLink("Stok Hareketi Ekle", "StokHareketEkle", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Stok Hareketi Listesi", "StokHareketListele", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kullaniciDepoYetkilisiDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kullanıcı
                            </a>
                            <div class="dropdown-menu" aria-labelledby="kullaniciDepoYetkilisiDropdown">
                                @Html.ActionLink("Kullanıcı Ekle", "KullaniciEkleDepoYetkilisi", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Kullanıcı Listesi", "KullaniciListeleDepoYetkilisi", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Stok Durum Raporu Ekle", "StokDurumRaporuEkle", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (Session["ID"] != null && (int)Session["KullaniciTipi"] == 3)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kullaniciRaporKullanicisiDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kullanıcı
                            </a>
                            <div class="dropdown-menu" aria-labelledby="kullaniciRaporKullanicisiDropdown">
                                @Html.ActionLink("Kullanıcı Ekle", "KullaniciEkleRaporKullanicisi", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Kullanıcı Listesi", "KullaniciListeleRaporKullanicisi", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Stok Hareket Raporu Listele", "StokHareketRaporuListele", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Stok Durum Raporu Listele", "StokDurumRaporuListele", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>

                    }
                </ul>
                @if (Session["ID"] != null)
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kullaniciBilgisiDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Session["KullaniciAdi"]
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="kullaniciBilgisiDropdown">
                                @Html.ActionLink("Bilgilerim", "KullaniciBilgileri", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Çıkış", "Cikis", "Home", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Uygulamam</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
